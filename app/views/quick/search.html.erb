<div class="row clearfix">
  <div class="col-md-12 column"
    <%= simple_form_for SearchApps.new, url: quick_search_apps_path, remote: true,
      html: {data: {type: 'json'}, role: 'form'} do |f| %>
      <div class="row">
        <div class="col-md-3">
            Search markets
        </div>
        <div clas="col-md-9">
          <%= f.input :google_play, as: :boolean, wrapper_html: {class: 'col-xs-2 checkbox pull-right'} %>
          <%= f.input :apple_store, as: :boolean, wrapper_html: {class: 'col-xs-2 checkbox  pull-right'} %>
          <%= f.input :windows, as: :boolean, wrapper_html: {class: 'col-xs-2 checkbox  pull-right'}, disabled: true %>
          <%= f.input :black_berry, as: :boolean, wrapper_html: {class: 'col-xs-2 checkbox  pull-right'}, disabled: true %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="input-group">
            <%= f.input :query, wrapper: false, label: false, input_html: {class: 'form-control', placeholder: 'Search for...'} %>
            <span class="input-group-btn">
              <%= f.submit 'Go!', class: 'btn btn-default' , data: {'disable-with' => 'Loading...'} %>
            </span>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div id="apps" class='row clearfix'></div>

<input type="submit" name="commit" value="Add selected" class="btn btn-block btn-primary btn-lg" data-disable-with="Add selected...">

<script id="app-template" type="text/x-handlebars-template">
  {{#each apps}}
    <label for="app_{{@index}}" class="app {{store}}">
      <span class="pull-right">{{store}}</span>
      <input type="checkbox" class="pull-left" id="app_{{@index}}">
      <img src="{{logo_url}}" class="app-logo pull-left img-rounded">
      <h5>{{title}}</h5>
      <h6>{{publisher}}</h6>
      <div class="clearfix"></div>
    </label>
  {{/each}}
</script>
